urxvt.keysym.C-M-v:	perl:pasta:paste
urxvt.keysym.C-M-0x56:	perl:pasta:copy
! Automatically copies when text is selected
urxvt.pasta.autocopy:	false

!! Remove keymap-picture mode. You can still use Ctrl-Shift for
